<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".mvp.views.GameActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:background="@color/black">

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginVertical="4dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/image1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"

               tools:src="@drawable/pic1_1" />

            <ImageView
                android:id="@+id/image2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:src="@drawable/pic1_2" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginVertical="4dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/image3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                tools:src="@drawable/pic1_3" />

            <ImageView
                android:id="@+id/image4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:src="@drawable/pic1_4" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/helper_lump"
        android:layout_width="70dp"
        android:layout_height="0dp"
        android:src="@drawable/light2"
        android:layout_marginVertical="8dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/answers"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/answer_glow"
        android:gravity="center">

        <TextView
            style="@style/tvStyle.tvAnswersStyle"
            tools:text="A" />

        <TextView
            style="@style/tvStyle.tvAnswersStyle"
            tools:text="B" />

        <TextView
            style="@style/tvStyle.tvAnswersStyle"
            tools:text="C" />

        <TextView
            style="@style/tvStyle.tvAnswersStyle"
            tools:text="D" />

        <TextView
            style="@style/tvStyle.tvAnswersStyle"
            tools:text="E" />

        <TextView
            style="@style/tvStyle.tvAnswersStyle"
            tools:text="F" />

        <TextView
            style="@style/tvStyle.tvAnswersStyle"
            tools:text="G" />

        <TextView
            style="@style/tvStyle.tvAnswersStyle"
            android:layout_marginEnd="0dp"
            tools:text="H" />

    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RelativeLayout
        android:id="@+id/variants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/variant1"
            style="@style/tvStyle"
            tools:text="B" />

        <TextView
            android:id="@+id/variant2"
            style="@style/tvStyle"
            android:layout_toEndOf="@id/variant1" />

        <TextView
            android:id="@+id/variant3"
            style="@style/tvStyle"
            android:layout_toEndOf="@id/variant2" />

        <TextView
            android:id="@+id/variant4"
            style="@style/tvStyle"
            android:layout_toEndOf="@id/variant3" />

        <TextView
            android:id="@+id/variant5"
            style="@style/tvStyle"
            android:layout_toEndOf="@id/variant4" />

        <TextView
            android:id="@+id/variant6"
            style="@style/tvStyle"
            android:layout_toEndOf="@id/variant5" />

        <TextView
            android:id="@+id/variant7"
            style="@style/tvStyle"
            android:layout_marginEnd="0dp"
            android:layout_toEndOf="@id/variant6" />


        <TextView
            android:id="@+id/variant8"
            style="@style/tvStyle"
            android:layout_below="@id/variant1" />

        <TextView
            android:id="@+id/variant9"
            style="@style/tvStyle"
            android:layout_below="@id/variant1"
            android:layout_toEndOf="@id/variant1" />

        <TextView
            android:id="@+id/variant10"
            style="@style/tvStyle"
            android:layout_below="@id/variant1"
            android:layout_toEndOf="@id/variant2" />

        <TextView
            android:id="@+id/variant11"
            style="@style/tvStyle"
            android:layout_below="@id/variant1"
            android:layout_toEndOf="@id/variant3" />

        <TextView
            android:id="@+id/variant12"
            style="@style/tvStyle"
            android:layout_below="@id/variant1"
            android:layout_toEndOf="@id/variant4" />

        <TextView
            android:id="@+id/variant13"
            style="@style/tvStyle"
            android:layout_below="@id/variant1"
            android:layout_toEndOf="@id/variant5" />

        <TextView
            android:id="@+id/variant14"
            style="@style/tvStyle"
            android:layout_below="@id/variant1"
            android:layout_marginEnd="0dp"
            android:layout_toEndOf="@id/variant6" />

    </RelativeLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1" />


</LinearLayout>