<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="steps: "
            android:textSize="30sp" />

        <TextView
            android:id="@+id/steps_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#EE0008"
            android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="#D1AA71"
            android:text="finish"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="#D1AA71"
            android:text="refresh"
            android:textStyle="bold" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/containerRel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/puzz1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="1.5dp"
            android:background="@color/black"
            android:text="1"
            android:textColor="@color/white" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/puzz2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="1.5dp"
            android:layout_toRightOf="@id/puzz1"
            android:background="@color/black"
            android:text="2"
            android:textColor="@color/white" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/puzz3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="1.5dp"
            android:layout_toRightOf="@id/puzz2"
            android:background="@color/black"
            android:text="3"
            android:textColor="@color/white" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/puzz4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="1.5dp"
            android:layout_toRightOf="@id/puzz3"
            android:background="@color/black"
            android:text="4"
            android:textColor="@color/white" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/puzz5"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@id/puzz1"
            android:layout_margin="1.5dp"
            android:background="@color/black"
            android:text="5"
            android:textColor="@color/white" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/puzz6"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@id/puzz4"
            android:layout_margin="1.5dp"
            android:layout_toRightOf="@id/puzz5"
            android:background="@color/black"
            android:text="6"
            android:textColor="@color/white" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/puzz7"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@id/puzz2"
            android:layout_margin="1.5dp"
            android:layout_toRightOf="@id/puzz6"
            android:background="@color/black"
            android:text="7"
            android:textColor="@color/white" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/puzz8"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@id/puzz4"
            android:layout_marginStart="1.5dp"
            android:layout_marginTop="1.5dp"
            android:layout_marginEnd="1.5dp"
            android:layout_marginBottom="1.5dp"
            android:layout_toRightOf="@id/puzz7"
            android:background="@color/black"
            android:text="8"
            android:textColor="@color/white" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/puzz9"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@id/puzz5"
            android:layout_margin="1.5dp"
            android:background="@color/black"
            android:text="9"
            android:textColor="@color/white" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/puzz10"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@id/puzz5"
            android:layout_margin="1.5dp"
            android:layout_toRightOf="@id/puzz9"
            android:background="@color/black"
            android:text="10"
            android:textColor="@color/white" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/puzz11"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@id/puzz6"
            android:layout_margin="1.5dp"
            android:layout_toRightOf="@id/puzz10"
            android:background="@color/black"
            android:text="11"
            android:textColor="@color/white" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/puzz12"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@id/puzz8"
            android:layout_margin="1.5dp"
            android:layout_toRightOf="@id/puzz11"
            android:background="@color/black"
            android:text="12"
            android:textColor="@color/white" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/puzz13"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@id/puzz9"
            android:layout_margin="1.5dp"
            android:background="@color/black"
            android:text="13"
            android:textColor="@color/white" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/puzz14"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@id/puzz9"
            android:layout_margin="1.5dp"
            android:layout_toRightOf="@id/puzz13"
            android:background="@color/black"
            android:text="14"
            android:textColor="@color/white" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/puzz15"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@id/puzz10"
            android:layout_marginStart="1.5dp"
            android:layout_marginTop="1.5dp"
            android:layout_marginEnd="1.5dp"
            android:layout_marginBottom="1.5dp"
            android:layout_toRightOf="@id/puzz14"
            android:background="@color/black"
            android:text="15"
            android:textColor="@color/white" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/puzz16"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@id/puzz11"
            android:layout_marginStart="1.5dp"
            android:layout_marginTop="1.5dp"
            android:layout_marginEnd="1.5dp"
            android:layout_marginBottom="1.5dp"
            android:layout_toRightOf="@id/puzz15"
            android:background="@color/black"
            android:textColor="@color/white" />
    </RelativeLayout>
</FrameLayout>